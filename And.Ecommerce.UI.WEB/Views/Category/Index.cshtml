@model IEnumerable<And.Ecommerce.Core.Model.Entity.Product>

@{
    ViewBag.Title = "Index";
    var category = (And.Ecommerce.Core.Model.Entity.Category)ViewBag.category;
}

<h2>E-Commerce</h2>
<h2>All Products with category @category.Name</h2>
@{
    foreach (var item in Model)
    {
        <div class="productBox">
            <p class="title">@item.Name</p>
            <img src="@item.ImageUrl" />
            <p>@item.Description</p>
            <p>@item.Brand</p>
            <p>@item.Price.ToString("##,## ₼")</p>
            <a href="/products/@item.Name.Replace(" ","-")/@item.ID" class="btn btn-success">Details</a>
            <a href="#" class="btn btn-default"><i class="fas fa-shopping-basket"></i> Add to Cart</a>
        </div>
    }
}
<div class="row"></div>
<style>
    .productBox {
        width: 220px;
        float: left;
        margin: 10px;
        border: 2px solid #9b9b9b;
        padding: 10px;
    }

        .productBox img {
            width: 100%
        }

        .productBox title {
            font-weight: bold;
            text-align: center;
        }

        .productBox p {
            text-align: center;
        }
</style>
