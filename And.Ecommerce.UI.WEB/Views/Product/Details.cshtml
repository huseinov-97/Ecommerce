@model And.Ecommerce.Core.Model.Entity.Product
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
    <div class="productBox">
        <p class="title">@Model.Name</p>
        <img src="@Model.ImageUrl" />
        <p>@Model.Description</p>
        <p>@Model.Brand</p>
        <p>@Model.Price.ToString("##,## ₼")</p>
        <a href="/Basket/AddProduct" class="btn btn-default"><i class="fas fa-shopping-basket"></i> Add to Cart</a>
    </div>

